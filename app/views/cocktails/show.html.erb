<div class="container">
  <h1 class="text-center"><%= @cocktail.name %></h1>
  <div class="dose-list">
    <ol>
      <% @cocktail.doses.each do |dose| %>
        <li><%= dose.ingredient.name %>- <%= dose.amount %></li>
      <% end %>
    </ol>
  </div>
  <%= simple_form_for([@cocktail, @dose]) do |f| %>
    <%= f.association :ingredient %>
    <%= f.input :amount %>
    <%= f.submit %>
    <% end %>
</div>
